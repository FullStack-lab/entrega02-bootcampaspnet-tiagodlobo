@model IEnumerable<ForumApp.Models.Comentario>

<h2>Comentários</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Message"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<p>
    @Html.ActionLink("Criar Novo Comentário", "Create", null, new { @class = "btn btn-primary" })
</p>

<div class="comentarios-list">
    @foreach (var item in Model)
    {
        <div class="comentario-item">
            <div class="comentario-header">
                <strong>@item.Autor</strong>
                <span>@item.DataCriacao.ToString("dd/MM/yyyy HH:mm")</span>
            </div>
            <div class="comentario-content">
                @item.Texto
                <div class="mt-2">
                    <span class="badge bg-secondary">
                        @item.Respostas.Count resposta(s)
                    </span>
                </div>
            </div>
            <div class="comentario-actions">
                @Html.ActionLink("Responder", "Details", new { id = item.Id }, new { @class = "btn btn-sm btn-info" })
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-sm btn-warning" })
                @using (Html.BeginForm("Delete", "Comentarios", new { id = item.Id }, FormMethod.Post, new { style = "display:inline" }))
                {
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Tem certeza que deseja excluir este comentário? Todas as respostas serão excluídas também.');">
                        Excluir
                    </button>
                }
            </div>

            @if (item.Respostas.Any())
            {
                <div class="respostas-list mt-3">
                    @foreach (var resposta in item.Respostas)
                    {
                        <div class="resposta-item ms-4">
                            <div class="resposta-header">
                                <strong>@resposta.Autor</strong>
                                <span>@resposta.DataCriacao.ToString("dd/MM/yyyy HH:mm")</span>
                            </div>
                            <div class="resposta-content">
                                @resposta.Texto
                            </div>
                            <div class="resposta-actions">
                                @Html.ActionLink("Editar", "Edit", new { id = resposta.Id }, new { @class = "btn btn-sm btn-warning" })
                                @using (Html.BeginForm("Delete", "Comentarios", new { id = resposta.Id }, FormMethod.Post, new { style = "display:inline" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Confirma a exclusão?');">
                                        Excluir
                                    </button>
                                }
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    }
</div>

<style>
    .resposta-item {
        border-left: 3px solid #007bff;
        padding: 10px;
        margin-top: 10px;
        background-color: #f8f9fa;
    }

    .resposta-header {
        display: flex;
        justify-content: space-between;
        margin-bottom: 5px;
        font-size: 0.9em;
        color: #666;
    }

    .resposta-content {
        margin-bottom: 10px;
    }

    .resposta-actions {
        margin-top: 5px;
    }
</style>