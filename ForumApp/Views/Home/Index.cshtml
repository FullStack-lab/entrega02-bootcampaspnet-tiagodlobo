@model IEnumerable<ForumApp.Models.Comentario>

<h2>Comentários</h2>

<p>
    @Html.ActionLink("Criar Novo Comentário", "Create", null, new { @class = "btn btn-primary" })
</p>

<div class="comentarios-list">
    @foreach (var item in Model)
    {
        <div class="comentario-item">
            <div class="comentario-header">
                <strong>@item.Autor</strong>
                <span>@item.DataCriacao.ToString("dd/MM/yyyy HH:mm")</span>
            </div>
            <div class="comentario-content">
                @item.Texto
            </div>
            <div class="comentario-actions">
                @Html.ActionLink("Detalhes", "Details", new { id = item.Id }, new { @class = "btn btn-sm btn-info" })
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-sm btn-warning" })
                @using (Html.BeginForm("Delete", "Comentarios", new { id = item.Id }, FormMethod.Post, new { style = "display:inline" }))
                {
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Confirma a exclusão?');">
                        Excluir
                    </button>
                }
            </div>
        </div>
    }
</div>